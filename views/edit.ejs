<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit the recipe</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <form method="POST" action="/recipes/<%= recipe._id %>?_method=PUT">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" value="<%= recipe.title %>" required>
        </div>
      
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea id="description" name="description" required><%= recipe.description %></textarea>
        </div>
      
        <div class="form-group ingredients-list" id="ingredients-list">
          <label for="ingredients">Ingredients:</label>
          <% recipe.ingredients.forEach(function(ingredient, index) { %>
            <div class="ingredient-field">
              <input type="text" name="ingredients[]" value="<%= ingredient %>" required>
              <button type="button" class="remove-ingredient">Remove</button>
            </div>
          <% }) %>
        </div>
        <button id="add-ingredient-button" type="button">Add Another Ingredient</button>
      
        <div class="form-group">
          <label for="instructions">Preparation Instructions:</label>
          <textarea id="instructions" name="instructions" required><%= recipe.instructions %></textarea>
        </div>
      
        <button type="submit">Update Recipe</button>
      </form>
      
      <script>
        document.getElementById('add-ingredient-button').addEventListener('click', function() {
          const ingredientsList = document.getElementById('ingredients-list');
          const newField = document.createElement('div');
          newField.classList.add('ingredient-field');
          newField.innerHTML = `
            <input type="text" name="ingredients[]" required>
            <button type="button" class="remove-ingredient">Remove</button>
          `;
          
          ingredientsList.appendChild(newField);
        });
        
        document.getElementById('ingredients-list').addEventListener('click', function(event) {
          if (event.target.classList.contains('remove-ingredient')) {
            const field = event.target.closest('.ingredient-field');
            field.remove();
          }
        });
      </script>
</body>
</html>
