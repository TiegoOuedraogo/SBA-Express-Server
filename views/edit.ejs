<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit the recipe</title>
    <style>
      .ingredients-list {
        margin-bottom: 10px;
      }
      #add-ingredient-button {
        margin-bottom: 20px;
      }
    </style>
</head>
<body>
    <form method="POST" action="/recipes/<%= recipe._id %>?_method=PUT">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" value="<%= recipe.title %>" required>
        </div>
      
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea id="description" name="description" required><%= recipe.description %></textarea>
        </div>
      
        <div class="form-group ingredients-list">
          <label for="ingredients">Ingredients:</label>
          <% recipe.ingredients.forEach(function(ingredient) { %>
            <input type="text" name="ingredients[]" value="<%= ingredient %>" required>
          <% }) %>
        </div>
        <button id="add-ingredient-button" type="button">Add Another Ingredient</button>
      
        <div class="form-group">
          <label for="instructions">Preparation Instructions:</label>
          <textarea id="instructions" name="instructions" required><%= recipe.instructions %></textarea>
        </div>
      
        <button type="submit">Update Recipe</button>
      </form>
      
      <script>
        document.getElementById('add-ingredient-button').addEventListener('click', function() {
          const ingredientsDiv = document.querySelector('.ingredients-list');
          const newField = document.createElement('input');
          newField.setAttribute('type', 'text');
          newField.setAttribute('name', 'ingredients[]');
          newField.required = true;
          ingredientsDiv.appendChild(newField);
        });
      </script>
</body>
</html>
